# syntax=docker/dockerfile:1.4

FROM ghcr.io/jimpick/lotus-fvm-localnet-web-base@sha256:c7f4f619a0d0f0aab09ca30ea874b34c2e8e30af78fc3b85a067755b16f9c423

USER root

WORKDIR /home/ubuntu/web

COPY Caddyfile .
RUN mv Caddyfile /etc/caddy/Caddyfile

COPY package.json .
COPY package-lock.json .
COPY server.mjs .

RUN mkdir -p public
RUN cp /home/ubuntu/.lotus-local-net/token public/token

RUN chown -R ubuntu. .

USER ubuntu

RUN npm install

EXPOSE 3000

CMD bash -c 'caddy start --config /etc/caddy/Caddyfile; node server.mjs'
